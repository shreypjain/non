# NoN (Network of Networks) Environment Configuration
# Copy this file to .env and replace placeholder values with your actual configuration

# ============================================================================
# API Keys (at least one required)
# ============================================================================

# OpenAI API Key
# Get from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google (Gemini) API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here
# Alternative environment variable name
# GEMINI_API_KEY=your-gemini-api-key-here

# ============================================================================
# Model Configuration
# ============================================================================

# Default model selection per provider
NON_DEFAULT_OPENAI_MODEL=gpt-4o-mini
NON_DEFAULT_ANTHROPIC_MODEL=claude-3-5-haiku-20241022
NON_DEFAULT_GOOGLE_MODEL=gemini-2.0-flash

# Default model hyperparameters
NON_DEFAULT_TEMPERATURE=0.7
NON_DEFAULT_MAX_TOKENS=4000

# ============================================================================
# Fallback and Latency Configuration
# ============================================================================

# Maximum acceptable latency in milliseconds before triggering fallback
# If a model response takes longer than this, fallback to next model
# Leave unset for no latency-based fallback
# NON_MAX_LATENCY_MS=5000

# Enable automatic fallback when rate limits are approaching
# When remaining rate limit capacity drops below 10%, consider using fallback
NON_FALLBACK_ON_RATE_LIMIT=true

# ============================================================================
# Rate Limiting (per provider)
# ============================================================================

# OpenAI rate limits
NON_OPENAI_REQUESTS_PER_MINUTE=500
NON_OPENAI_TOKENS_PER_MINUTE=200000
NON_OPENAI_CONCURRENT_REQUESTS=20

# Anthropic rate limits
NON_ANTHROPIC_REQUESTS_PER_MINUTE=1000
NON_ANTHROPIC_TOKENS_PER_MINUTE=400000
NON_ANTHROPIC_CONCURRENT_REQUESTS=25

# Google (Gemini) rate limits
NON_GOOGLE_REQUESTS_PER_MINUTE=1500
NON_GOOGLE_TOKENS_PER_MINUTE=1000000
NON_GOOGLE_CONCURRENT_REQUESTS=30

# ============================================================================
# Layer Configuration
# ============================================================================

# Timeout for layer execution in seconds
NON_LAYER_TIMEOUT=30.0

# Maximum number of retry attempts for failed operations
NON_MAX_RETRIES=3

# Delay between retry attempts in seconds
NON_RETRY_DELAY=1.0

# Minimum success threshold for layers (0.0 to 1.0)
# Example: 0.7 means at least 70% of nodes must succeed
NON_MIN_SUCCESS_THRESHOLD=1.0

# ============================================================================
# Network Configuration
# ============================================================================

# Maximum number of layers to execute concurrently
# Set to 1 for sequential execution (default)
NON_MAX_CONCURRENT_LAYERS=1

# Global timeout for entire network execution in seconds
NON_GLOBAL_TIMEOUT=300.0

# ============================================================================
# Observability Configuration
# ============================================================================

# Enable distributed tracing
NON_ENABLE_TRACING=true

# Enable metrics collection
NON_ENABLE_METRICS=true

# Logging level (optional, defaults to INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# NON_LOG_LEVEL=INFO

# ============================================================================
# Advanced Configuration
# ============================================================================

# Scheduler queue strategy
# Options: fifo, priority, round_robin, least_loaded
# NON_QUEUE_STRATEGY=priority

# Backoff strategy for rate limiting
# Options: linear, exponential, fixed
# NON_BACKOFF_STRATEGY=exponential

# Base delay for backoff in seconds
# NON_BACKOFF_BASE_DELAY=1.0

# Maximum delay for backoff in seconds
# NON_BACKOFF_MAX_DELAY=60.0

# Multiplier for exponential backoff
# NON_BACKOFF_MULTIPLIER=2.0

# ============================================================================
# Development and Testing
# ============================================================================

# Enable mock providers for testing without API calls
# NON_USE_MOCK_PROVIDERS=false

# Seed for deterministic mock responses (testing only)
# NON_MOCK_SEED=42
